<EkranYoneticisi>:
    GirisSayfasi:
    KisiSayfasi:
    GuncelleSayfasi:


<KisiSayfasi>:
    name : "kisisayfasi"
    BoxLayout:
        orientation: "vertical"
        Label:
            text:"Merhaba"
            id: lblad
        BoxLayout:
            orientation:"horizontal"
            Button:
                text: "Geri"
                on_press: root.geri()
            Button:
                text:"Güncelle"
                on_press:root.guncelle()

<GuncelleSayfasi>:
    name: "guncellesayfasi"
    BoxLayout:
        orientation:"vertical"
        GridLayout:
            size_hint:(1,0.2)
            rows:1
            cols:2
            TextInput:
                id:kadiguncelle
            Button:
                text:"Güncelle"
                on_press : root.guncelle()  
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'bottom'

            Button:
                size_hint: (0.1,0.1)
                text:"geri"
                on_press: root.geri()


<GirisSayfasi>:
    name : "girissayfasi"
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            size_hint:(1,0.2)
            orientation:"horizontal"
            Label:
                text:"Kullanıcı Adı"
            TextInput:
                id: kadi
        BoxLayout:
            size_hint:(1,0.2)
            orientation:"horizontal"
            Label:
                text:"Şifre"
            TextInput:
                id: sifre
        Button:
            text:"Giriş Yap"
            on_press: root.tikla()

<Uyari>:
    id:popup
    BoxLayout:
        orientation : "vertical"
        Label:
            text: "Kullanici adı veya şifre yanlış"
        Button:
            text: "Kapat"
            on_press: popup.dismiss()