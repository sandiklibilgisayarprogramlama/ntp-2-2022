<EkranYoneticisi>:
    GirisSayfasi:
    KisiSayfasi:

<KisiSayfasi>:
    name : "kisisayfasi"
    BoxLayout:
        orientation: "vertical"
        Label:
            text:"Merhaba"
            id: lblad
        Button:
            text: "Geri"
            on_press: root.geri()

<GirisSayfasi>:
    name : "girissayfasi"
    BoxLayout:
        orientation:"vertical"
        BoxLayout:
            orientation:"horizontal"
            Label:
                text:"Kullanıcı Adı"
            TextInput:
                id: kadi
        BoxLayout:
            orientation:"horizontal"
            Label:
                text:"Şifre"
            TextInput:
                id: sifre
        Button:
            text:"Giriş Yap"
            on_press: root.tikla()

<Uyari>:
    id:popup
    BoxLayout:
        orientation : "vertical"
        Label:
            text: "Kullanici adı veya şifre yanlış"
        Button:
            text: "Kapat"
            on_press: popup.dismiss()